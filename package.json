{
  "name": "translate-your-game-desktop",
  "version": "1.0.0",
  "description": "Professional game localization desktop app",
  "main": "build/main.js",
  "scripts": {
    "start": "npm run build:main && electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc src/main/main.ts --outDir build --target ES2020 --module commonjs --moduleResolution node --esModuleInterop",
    "build:preload": "tsc src/preload/preload.ts --outDir build/preload --target ES2020 --module commonjs --moduleResolution node --esModuleInterop",
    "build:renderer": "webpack --mode production",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build && electron-builder -mwl",
    "dev": "concurrently \"npm run build:main\" \"npm run build:preload\" \"webpack --mode development --watch\"",
    "dev:electron": "npm run build:main && npm run build:preload && electron .",
    "dev:web": "webpack serve --config webpack.dev.config.js"
  },
  "keywords": [
    "game",
    "localization",
    "translation"
  ],
  "author": "Translate Your Game",
  "license": "MIT",
  "build": {
    "appId": "com.translateyourgame.desktop",
    "productName": "Translate Your Game",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "@types/gettext-parser": "^8.0.0",
    "@types/node": "^24.0.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/xml2js": "^0.4.14",
    "buffer": "^6.0.3",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.3",
    "process": "^0.11.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stream-browserify": "^3.0.0",
    "style-loader": "^4.0.0",
    "timers-browserify": "^2.0.12",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "util": "^0.12.5",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@heroicons/react": "^2.2.0",
    "antd": "^5.26.0",
    "axios": "^1.10.0",
    "gettext-parser": "^8.0.0",
    "socket.io-client": "^4.8.1",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2"
  }
}
